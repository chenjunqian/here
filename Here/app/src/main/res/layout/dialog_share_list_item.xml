<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/universal_layout_background_color"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/dialog_share_list_item_image_view"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp" />

    <TextView
        android:id="@+id/dialog_share_list_item_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"
        android:textSize="15sp"
        android:layout_toEndOf="@+id/dialog_share_list_item_image_view"
        android:textColor="@color/universal_item_text_color_black" />
</RelativeLayout>
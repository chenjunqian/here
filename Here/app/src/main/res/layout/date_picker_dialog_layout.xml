<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/date_picker_modify_parent_layout"
    android:background="@drawable/universal_alert_dialog_shape"
    android:orientation="vertical">


    <DatePicker
        android:id="@+id/date_picker_modify_username_date_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp">

    </DatePicker>

    <LinearLayout
        android:id="@+id/date_picker_modify_dialog_operation_layout"
        android:layout_width="@dimen/universal_180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/universal_20dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/date_picker_modify_ok_button"
            android:layout_width="@dimen/universal_80dp"
            android:layout_height="@dimen/universal_40dp"
            android:background="@null"
            android:text="ok"
            android:textColor="@color/universal_item_text_color_black" />

        <TextView
            android:id="@+id/middle_text_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0" />

        <Button
            android:id="@+id/date_picker_modify_cancel_button"
            android:layout_width="@dimen/universal_80dp"
            android:layout_height="@dimen/universal_40dp"
            android:background="@null"
            android:text="cancel"
            android:textColor="@color/universal_title_background_red" />
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/universal_white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/left_menu_profile_layout"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/bg_drawer_layout_info">

        <com.eason.marker.util.WidgetUtil.CircleImageView
            android:id="@+id/left_menu_avatar_image_view"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:scaleType="fitXY"
            android:src="@drawable/default_avatar_ori" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/main_page_tag_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/left_menu_profile_layout"
        android:background="@drawable/layout_background_selector"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/main_page_tag_image_view"
            android:layout_width="35dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_home" />

        <TextView
            android:id="@+id/main_page_tag_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/main_page_tag_image_view"
            android:text="@string/main_map_page"
            android:textColor="@color/universal_item_text_color_black"
            android:textSize="15sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/user_list_item_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/main_page_tag_layout"
        android:background="@drawable/layout_background_selector"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/user_list_image_view"
            android:layout_width="35dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_view_list" />

        <TextView
            android:id="@+id/user_list_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/user_list_image_view"
            android:text="@string/near_list_page_title"
            android:textColor="@color/universal_item_text_color_black"
            android:textSize="15sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/current_post_list_item_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/user_list_item_layout"
        android:background="@drawable/layout_background_selector"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/my_post_list_image_view"
            android:layout_width="35dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_history_black_18dp" />

        <TextView
            android:id="@+id/my_post_list_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/my_post_list_image_view"
            android:text="@string/current_list_page_title"
            android:textColor="@color/universal_item_text_color_black"
            android:textSize="15sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/enter_chat_main_page_item_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/current_post_list_item_layout"
        android:background="@drawable/layout_background_selector"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/enter_chat_main_page_image_view"
            android:layout_width="35dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_speaker_notes_blue_24dp" />

        <TextView
            android:id="@+id/enter_chat_main_page_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/enter_chat_main_page_image_view"
            android:text="@string/enter_chat_page_page_title"
            android:textColor="@color/universal_item_text_color_black"
            android:textSize="15sp" />

        <ImageView
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/enter_chat_main_page_item_remind_image_view"
            android:src="@drawable/ic_email_red_18dp"
            android:layout_width="35dp"
            android:layout_height="20dp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/enter_chat_main_page_item_layout"
        android:layout_marginBottom="10dp"
        android:background="@color/universal_item_text_color_sub_black">

    </View>

    <RelativeLayout
        android:id="@+id/login_item_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/layout_background_selector"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/login_image_view"
            android:layout_width="35dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_lock_36pt_2x" />

        <TextView
            android:id="@+id/login_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/login_image_view"
            android:text="登录"
            android:textColor="@color/universal_item_text_color_black"
            android:textSize="15sp" />
    </RelativeLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/universal_layout_background_color"
    android:orientation="vertical"
    tools:context=".login_register.RegisterActivity">

    <RelativeLayout
        android:background="@color/universal_title_background_green"
        android:layout_width="match_parent"
        android:layout_height="@dimen/universal_title_height">

        <TextView
            android:text="@string/register"
            android:textSize="@dimen/universal_title_text_size"
            android:layout_centerInParent="true"
            android:textColor="@color/universal_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>


    <LinearLayout
        android:layout_marginTop="25dp"
        android:background="@color/universal_white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/universal_title_height">

        <EditText
            android:id="@+id/register_page_email_phone_edit_text"
            android:layout_width="match_parent"
            android:background="@null"
            android:layout_marginLeft="28dp"
            android:hint="@string/email_phone_edit_text_hint"
            android:layout_height="match_parent" />
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical" >

        <Button
            android:id="@+id/register_page_email_phone_next_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/universal_title_height"
            android:layout_centerInParent="true"
            android:textColor="@color/universal_white"
            android:background="@drawable/universal_big_round_green_button_shape"
            android:text="下一步" />
    </RelativeLayout>
</LinearLayout>